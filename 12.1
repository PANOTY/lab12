#include <stdio.h>

struct Person {
    char Name[20];
    int Age;
    char Sex;  // ใช้ char สำหรับเก็บเพศ
    float Score;
};

int main() {
    struct Person personA, personB;

    // รับข้อมูลของ Person A
    printf("Person A\n");
    printf("Name: ");
    scanf(" %[^\n]", personA.Name);  // อ่านชื่อที่มีช่องว่าง
    printf("Age: ");
    scanf("%d", &personA.Age);
    printf("Sex (M/F): ");
    scanf(" %c", &personA.Sex);
    printf("Score: ");
    scanf("%f", &personA.Score);

    // รับข้อมูลของ Person B
    printf("\nPerson B\n");
    printf("Name: ");
    scanf(" %[^\n]", personB.Name);
    printf("Age: ");
    scanf("%d", &personB.Age);
    printf("Sex (M/F): ");
    scanf(" %c", &personB.Sex);
    printf("Score: ");
    scanf("%f", &personB.Score);

    // แสดงผลข้อมูล
    printf("\n--| Person A Information |--\n");
    printf("Name: %s (%c)\n", personA.Name, personA.Sex);
    printf("Age: %d years old\n", personA.Age);
    printf("Score: %.2f points\n", personA.Score);

    printf("\n--| Person B Information |--\n");
    printf("Name: %s (%c)\n", personB.Name, personB.Sex);
    printf("Age: %d years old\n", personB.Age);
    printf("Score: %.2f points\n", personB.Score);

    return 0;
}
